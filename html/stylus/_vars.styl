// innerの左右マージン
innerMargin()
  margin-left: auto
  margin-right: auto

innerProperty()
  width: 96%
  max-width: 768px

// 単位
unitlist1 = px \%
unitlist2 = px em
unitlist3 = px \% em
unitlist4 = px \% vw
unitlist5 = px \% vh

// marginとpadding
spaces($min = 0, $max = 100, $step = 1, $unit = 'px')
  $props = {
    m: 'margin',
    p: 'padding'
  }

  $spaces = {
    t: 'top',
    r: 'right',
    b: 'bottom',
    l: 'left'
  }

  for $pKey, $pVal in $props
    for $i in ($min / $step) .. ($max / $step)
      $num = $i * $step
      $value = $i == 0 ? $num : unit($num, $unit)

      .up-{$pKey}-{$num}
        {$pVal} $value 

      for $key, $val in $spaces
        .up-{$pKey}{$key}-{$num}
          {$pVal}-{$val} $value 